algoritmo "semnome"

var

   x1, x2, x3: real

inicio

     Escreval ("Qual foi a nota obtida pelo aluno na 1ª prova?")
     Leia (x1)
     Escreval ("Qual foi a nota obtida pelo aluno na 2ª prova?")
     Leia (x2)
     x3 <- ((x1+x2)/2)
     Escreval ("A média obtida pelo aluno nas duas provas é igual a:", x3)

fimalgoritmo
