algoritmo "semnome"

var

    x1, x2, x3: real

inicio

    Escreval ("Digite a distância em metros que deseja converter para kilometros e centimetros.")
    Leia (x1)
    x2 <- (x1/1000)
    x3 <- (x1*100)
    Escreval ("A distância em kilometro é igual a", x2,".")
    Escreval ("A distância em centimetros é igual a", x3,".")

fimalgoritmo
